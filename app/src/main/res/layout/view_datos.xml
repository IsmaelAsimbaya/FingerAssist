<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="10dp"
        android:layout_height="90dp"
        android:layout_weight="0.6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewNameDia"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Lu 08/22"
            android:textAlignment="center"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/textViewDia"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center"
            android:text="28"
            android:textAlignment="center"
            android:textSize="38sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/textViewHorario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="9h00 - 19h00"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/login"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/textViewEntrada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7h00"
                android:textSize="17sp"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/logout"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/textViewSalida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="17h00"
                android:textSize="17sp"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="3dp"
        android:layout_height="90dp"
        android:layout_weight="0.6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Atraso:"
            android:textAlignment="center"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/textViewAtraso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2"
            android:textAlignment="center"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>